#!/bin/sh

brew bundle --file=- <<EOF
  cask_args appdir: "/Applications"

  tap "moncho/dry"
  tap "homebrew/cask-fonts"
  brew "dry"

  cask "kitty"
  cask "spectacle"
  cask "hammerspoon"
  cask "font-inconsolata-for-powerline"
  cask "alfred"

  brew "shellcheck"
  brew "vim"
  brew "tmux"
  brew "fzf"
  brew "yadm"
  brew "hub"
  brew "bash-git-prompt"
EOF


if ! which fzf > /dev/null; then
  $(brew --prefix)/opt/fzf/install
fi

